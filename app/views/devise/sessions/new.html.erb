<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-6"> <!-- will have to change col-lg-12 to something smaller -->
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-3">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-7 order-2 order-lg-1"> <!-- change col-md and col-lg later -->
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Log In</p>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <p class="alert"><%= alert %></p>

                  <div class="field d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", type:"email", class:"form-control"%>
                      <%= f.label :email, class:"form-label" %><br />
                    </div>
                  </div>

                  <div class="field d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.password_field :password, autocomplete: "current-password", type:"password", class:"form-control" %>
                      <%= f.label "password", class:"form-label" %><br />
                    </div>
                  </div>

                  <div class="actions d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= f.submit "Log In", class:"btn btn-primary btn-lg" %>
                  </div>
                <% end %>
                <div class="field d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    <p>Need an account? <a href="/users/sign_up">Sign Up</a></p>
                    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
